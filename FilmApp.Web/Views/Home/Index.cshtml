@model FilmApp.Web.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- İçerideki CSS stilini ekliyoruz -->
    <style>
        .card-img-top:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease;
        }
    </style>

    <!-- Bootstrap ve diğer stil dosyaları buraya eklenebilir -->
</head>

<body>
<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-4 text-center text-truncate fw-bold lh-1 mb-4">
                Perde Arkası
            </h1>
            <p class="lead text-center text-muted mb-5">
                "Perde Arkası"na! Hoş Geldiniz 🎬 Sinema dünyasına yepyeni bir pencereden bakmaya hazır mısınız?

                    Burada, en sevilen filmlerin:

                    Özetlerini keşfedin,
                    IMDb puanlarını inceleyin,
                    Kullanıcı yorumlarını okuyun ve kendi yorumlarınızı paylaşın!
                    Sinema perdesinin arkasındaki büyülü dünyayı birlikte keşfedelim. Hangi filmi izlesem diye düşünüyorsanız doğru yerdesiniz.
                    📽️ Haydi, perdeyi aralayalım!
            </p>


        </div>

        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/7991579/pexels-photo-7991579.jpeg?auto=compress&cs=tinysrgb&w=600"
                 alt="Perde Arkası"
                 class="d-block mx-auto img-fluid rounded shadow-lg" />

        </div>
    </div>
</div>

    <div class="container">
        <div class="row justify-content-lg-between">
            <div class="col-12 d-flex flex-wrap">
                @if (Model != null && Model.Tags.Any())
                {
                    foreach (var tag in Model.Tags)
                    {
                        <a href="@Url.Action("Index", "Home", new { tag = tag.Name })"
                           class="btn btn-outline-dark btn-sm me-2 mb-2 shadow-sm rounded-pill">
                            @tag.Name
                        </a>
                    }
                }
            </div>
        </div>
    </div>







    <div class="container">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <!-- row-cols sınıfı ile sütun sayısı belirlenir -->
            @if (Model != null && Model.BlogPosts.Any())
            {
                foreach (var blogPost in Model.BlogPosts)
                {
                    <div class="col">
                        <div class="card h-100 shadow-lg border-0">
                            <a href="@Url.Action("Index", "Blogs", new { urlHandle = blogPost.UrlHandle })">
                                <img src="@blogPost.FeaturedImageUrl" alt="@blogPost.Heading"
                                     class="card-img-top rounded-top" />
                            </a>
                            <div class="card-body">
                                <h5 class="card-title text-dark fw-bold">@blogPost.Heading</h5>
                                <p class="text-muted">
                                    <small>Yazar: @blogPost.Author</small>
                                    <br />
                                    <small>Paylaşım Tarihi: @blogPost.PublishedDate.ToShortDateString()</small>
                                    <br />
                                    <small>IMDb: @blogPost.ShortDescription</small>
                                </p>
                                <a class="btn btn-dark btn-sm" asp-area="" asp-controller="Blogs" asp-action="Index" asp-route-urlHandle="@blogPost.UrlHandle">
                                    Daha Fazla
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>



</body>




<div class="d-flex justify-content-center mt-4">
    <nav>
        <ul class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })">Önceki</a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })">Sonraki</a>
                </li>
            }
        </ul>
    </nav>
</div>

