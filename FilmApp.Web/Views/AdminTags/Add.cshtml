@model FilmApp.Web.Models.ViewModels.AddTagRequest
@{
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Yeni Etiket Ekle - Admin Özelliği</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Etiket adı</label>
            <input type="text" class="form-control" id="name" asp-for="Name" required/>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class ="mb-3">
            <label class="form-label">Uzun hali</label>
            <input type="text" class="form-control" id="displayName" asp-for="DisplayName" required/>
            <span class="text-danger" asp-validation-for="DisplayName"></span>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">
                Gönder
            </button>
        </div>
    </form>
</div>